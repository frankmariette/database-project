extends layout
block content
  #page-wrapper
      .row
        .col-sm-12
          h1.page-header #{rep.f_name} #{rep.l_name}
          .col-sm-3
            img.img-responsive(src='http://www.corporatetraveller.ca/assets/images/profile-placeholder.gif')
          .col-sm-6
            table.table
              tr
              -if(rep.gender == 'M')
                td Gender: Male
              -else if(rep.gender == 'F')
                td Gender: Female
              -else
                td Gender: Unknown
              tr
                td Birth Date: #{rep.birth_date}
              tr
                td Religion: #{rep.religion}
              tr
                td Party: #{rep.party}
          .col-sm-3
            | Statistics?
      .row
        .col-lg-12




